<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfaz.MainActivity"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESE UNA PERSONA NUEVA"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Ingrese Nombre"
        android:textAlignment="center"
        android:id="@+id/EdtNombre"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Ingrese Apellido"
        android:textAlignment="center"
        android:id="@+id/EdtApellido"
        android:layout_below="@+id/EdtNombre"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Ingrese DNI"
        android:textAlignment="center"
        android:id="@+id/EdtDNI"
        android:layout_below="@+id/EdtApellido"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EdtDNI"
        android:orientation="horizontal"
        android:id="@+id/LinearDireccion"
        android:gravity="center_horizontal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Calle"
        android:textAlignment="center"
        android:id="@+id/EdtCalle"
        android:layout_below="@+id/EdtDNI"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Altura"
        android:textAlignment="center"
        android:id="@+id/EdtAltura"

        />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Piso"
            android:textAlignment="center"
            android:id="@+id/EdtPiso"
            />
    </LinearLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="TELEFONO"
        android:layout_below="@id/LinearDireccion"
        android:id="@+id/EdtTelefono"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="REGISTRAR"
        android:id="@+id/BtnRegistrar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="VER REGISTROS"
        android:id="@+id/BtnVerRegistros"
        android:layout_toRightOf="@+id/BtnRegistrar"/>

    </LinearLayout>

</RelativeLayout>